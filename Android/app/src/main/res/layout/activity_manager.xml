<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManagerActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_manager"
        app:title="Quản lí"
        android:background="#B2B4C1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/line_1"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/add_product"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="150dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Thêm sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/update_product"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_brush_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Sửa sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/line_2"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/delete_product"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Xóa sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/view_order"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_apps_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Xem đơn hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/line_3"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/statistic"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_manager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_insert_chart_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Thống kê mua hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
